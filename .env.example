# Agent Intervector Command Center - Environment Configuration
# Designed by PROMETHEUS & THEO-5001

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=7500
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# ==============================================
# CHROMADB CONFIGURATION
# ==============================================
CHROMA_HOST=localhost
CHROMA_PORT=7501
CHROMA_DB_PATH=D:/databases/chromadb
CHROMA_API_URL=http://localhost:7501

# ==============================================
# MONGODB CONFIGURATION
# ==============================================
MONGODB_URI=mongodb://localhost:27017/agent-command-center
MONGODB_DB_NAME=agent_command_center

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long
API_RATE_LIMIT=1000
CORS_ORIGIN=http://localhost:3000

# ==============================================
# AGENT SYSTEM CONFIGURATION
# ==============================================
MAX_AGENTS=50
MESSAGE_RETENTION_DAYS=30
RESTORE_POINT_MAX=100
AGENT_TIMEOUT=300000
AUTO_BACKUP_INTERVAL=1800000
COMMUNICATION_CHECK_INTERVAL=30000

# ==============================================
# AI SERVICE CONFIGURATION
# ==============================================
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/server.log
ERROR_LOG_PATH=./logs/error.log
ACCESS_LOG_PATH=./logs/access.log

# ==============================================
# PERFORMANCE MONITORING
# ==============================================
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION=true
PERFORMANCE_MONITORING=true

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
DEBUG_MODE=true
VERBOSE_LOGGING=true
HOT_RELOAD=true

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# Uncomment for production deployment
# NODE_ENV=production
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ==============================================
# INTERVECTOR COMMUNICATION SETTINGS
# ==============================================
INTERVECTOR_PROTOCOL_VERSION=1.0
AGENT_DISCOVERY_ENABLED=true
AUTO_TASK_ASSIGNMENT=true
HIVE_MEMORY_ENABLED=true
ZERO_TOKEN_COORDINATION=true

# ==============================================
# BMAD INTEGRATION
# ==============================================
BMAD_METHOD_PATH=D:/BMAD-METHOD
BMAD_V4_ENGINE_PATH=D:/bmad-v4-engine
BMAD_PROJECT_MANAGER_PATH=D:/bmad-v4-project-manager

# ==============================================
# VIRTUAL DESKTOP SUPPORT
# ==============================================
VIRTUAL_DESKTOPS_ENABLED=true
MAX_VIRTUAL_DESKTOPS=5
DESKTOP_COORDINATION=true