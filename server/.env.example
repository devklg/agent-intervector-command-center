# Server Configuration
PORT=5001
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/agent-command-center
MONGODB_DB_NAME=agent_command_center

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_DB_PATH=D:/databases/chromadb
CHROMA_API_URL=http://localhost:8000

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Agent Configuration
MAX_AGENTS=50
MESSAGE_RETENTION_DAYS=30
RESTORE_POINT_MAX=100

# System Monitoring
HEALTH_CHECK_INTERVAL=30000
AGENT_TIMEOUT=300000
AUTO_BACKUP_INTERVAL=1800000

# External Services
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/server.log